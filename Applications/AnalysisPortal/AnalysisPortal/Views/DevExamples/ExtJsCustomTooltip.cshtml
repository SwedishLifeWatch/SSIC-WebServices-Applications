@model object

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Ext Js custom tooltip sample</title>
        <link href="~/Content/ext-all-slate-min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/font-awesome.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/AnalysisPortal.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/Overrides.css" rel="stylesheet" type="text/css" />
        <script src="~/Scripts/jquery-2.1.4.js" type="text/javascript"></script>
        <script src="~/Scripts/extjs-4.2.1/ext-all.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
        <script src="~/Scripts/modernizr-2.5.3.js" type="text/javascript"></script>

        <style>
            body {                
                margin: 20px;                
            }
            div.info {
                margin: 10px;
            }
        </style>

        <script type="text/javascript">
            Ext.require(['*']);
            
            Ext.onReady(function() {
                Ext.create('Ext.tip.ToolTip', {
                    title: '<a href="#">Rich Content Tooltip</a>',
                    id: 'content-anchor-tip',
                    target: 'buttonWithTooltip1',
                    anchor: 'left',
                    html: null,
                    width: 435,
                    autoHide: false,
                    closable: true,
                    contentEl: 'content-tip', // load content from the page
                    listeners: {
                        'render': function () {
                            this.header.on('click', function (header, e) {
                                e.stopEvent();
                                Ext.Msg.alert('Link', 'Link to something interesting.');
                                Ext.getCmp('content-anchor-tip').hide();
                            }, this, { delegate: 'a' });
                        }
                    }
                });

                Ext.QuickTips.init();
            });
        </script>
    </head>
    <body>


        <h3>Ext Js custom Tooltips</h3>
        <div>
            <div class="info"><button id="buttonWithTooltip1" class="btn-primary" type="button">Button with tooltip</button></div>            
        </div>


        <div style="display:none;">
            <div id="content-tip" style="overflow:hidden">
                <ul>
                    <li>5 bedrooms</li>
                    <li>2 bathrooms</li>
                    <li>Large backyard</li>
                    <li>Close to transport</li>
                </ul>
                <div class="x-clear"></div>
                <img src="http://upload.wikimedia.org/wikipedia/commons/1/1f/The_Tower_House_2008_07_07.JPG" alt="Website Thumbnail" />
            </div>
        </div>

    </body>
</html>